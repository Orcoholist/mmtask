{
  "compilerOptions": {
    "module": "nodenext", 
    "moduleResolution": "nodenext",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist" ,
    "baseUrl": "./src", 
    "paths": {
      "@/graphql/*": ["./src/graphql/*"]
    }
  },
  "include": ["src/**/*"] 
}
